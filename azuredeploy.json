{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "SubscriptionId":
      {
        "type": "string",
        "metadata": {
          "description":"Subscription ID of your Azure Account"
        }
      },
      
      "ResourceGroupName":
      {
        "type": "string",
        "metadata": {
          "description":"ResourceGroup Name for the deployment"
        }
      },
      "Location":
      {
        "type": "string",
        "allowedValues": [
          "East US",
          "Central US",
          "North Central US",
          "South Central US",
          "West Central US",
          "West US",
          "South India"
        ],
        "defaultValue": "South Central US",
        "metadata": {
          "description":"Please Select your Region"
        }
      },
      "ApplicationID":
      {
        "type": "string",
        "metadata": {
          "description":"Application ID to modify in your API App"
        }
      },
      "RDBrokerURL":
      {
        "type": "string",
        "metadata": {
          "description":"RDBrokerURL to modify in your API App"
        }
      },
      "ResourceURL":
      {
        "type": "string",
        "metadata": {
          "description":"ResourceURL to modify in your API App"
        }
      },
      "Azure LoginID": {
        "type": "string",
        "metadata": {
            "description": "HosterAdminName for the Azure Partner Account."
        }
      },
        "Azure LoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "HosterAdminPassword for the Azure Partner Account."
            }
        }

    },
       "variables": {
        "nicName": "myVMNic",
        "addressPrefix": "10.0.0.0/16",
        "vmsubscriptionId":"[subscription().subscriptionId]",
        "subnetName": "Subnet",
        "subnetPrefix": "10.0.0.0/24",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]",
        "vmName": "MyVM",
        "dnsLabelPrefix":"test",
        "virtualNetworkName": "MyVNET",
        "publicIPAddressName": "myPublicIP",
        "dnsNameForPublicIP": "[concat(variables('dnsLabelPrefix'),uniqueString(resourceGroup().name))]",
        "_artifactsLocation": "https://raw.githubusercontent.com/phanikumarsharma/rdmisaasofferingtemplate/master/scripts/",
        "adminUsername": "vmadmin",
        "adminPassword": "keepcalm@123",
        "resourcegroupname": "[resourceGroup().name]",
        "FileURI": "[concat(variables('_artifactsLocation'),'/RDmiSaaS.zip')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('publicIPAddressName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('dnsNameForPublicIP')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworkName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[variables('publicIPAddressName')]",
                "[variables('virtualNetworkName')]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A2"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "CustomScriptExtension",
                    "apiVersion": "2016-04-30-preview",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.8",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                           "fileUris": [
                            "https://raw.githubusercontent.com/phanikumarsharma/rdmisaasofferingtemplate/master/scripts/New-RdmiMgmtSetup.ps1"
                        ],
                        "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File New-RdmiMgmtSetup.ps1', ' -SubscriptionId \"', parameters('SubscriptionId'), '\"',' ',  ' -ResourceGroupName \"', parameters('ResourceGroupName'), '\"',' ', ' -Location \"', parameters('Location'), '\"',' ', ' -ApplicationID \"', parameters('ApplicationID'), '\"',' ', ' -RDBrokerURL \"', parameters('RDBrokerURL'), '\"',' ', ' -ResourceURL \"', parameters('ResourceURL'), '\"',' ',' -UserName \"', parameters('Azure LoginID'), '\"',' ',' -Password \"', parameters('Azure LoginPassword'), '\"',' ',' -fileURI \"', variables('FileURI'), '\"')]"
                        }
                    },
                    "dependsOn": [
                        "[variables('vmName')]"
                    ]
                }
            ],
            "dependsOn": [
                "[variables('nicName')]"
            ]
        }
    ]
       }
